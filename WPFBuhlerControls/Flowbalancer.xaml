             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="55" d:DesignWidth="40">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Canvas HorizontalAlignment="Center" VerticalAlignment="Center" Name="canvasMain" Width="40" Height="55">

                <Rectangle Name="RectSmall" Width="10" Height="10" Margin="29,0" StrokeThickness="1" Stroke="Black"/>
                <Rectangle Name="RectMain" Width="30" Height="40.4" Margin="0,0" StrokeThickness="1" Stroke="Black"/>
                <Polyline Name="PolyBot" Points="1,40 29,40 15,55 1,40 29,40" StrokeThickness="1" Stroke="Black"/>
                
            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>
