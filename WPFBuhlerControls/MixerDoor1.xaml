<UserControl x:Class="WPFBuhlerControls.MixerDoor1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="13" d:DesignWidth="40">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Canvas HorizontalAlignment="Center" VerticalAlignment="Center" Name="canvasMain" Width="40" Height="13">
                <Polyline Name="polyClosed" StrokeThickness="3" Stroke="Black" Points="0,2 40,2"/>
                <Polyline Name="polyOpenLeft" StrokeThickness="3" Stroke="Black" Points="0,2 8,2"/>
                <Polyline Name="polyOpenRight" StrokeThickness="3" Stroke="Black" Points="32,2 40,2"/>
                <Polyline Name="polyOpenDownLeft" StrokeThickness="3" Stroke="Black" Points="7,2 13,10" StrokeEndLineCap="Round" StrokeStartLineCap="Round" />
                <Polyline Name="polyOpenDownRight" StrokeThickness="3" Stroke="Black" Points="27,10 33,2" StrokeEndLineCap="Round" StrokeStartLineCap="Round"/>
            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>
