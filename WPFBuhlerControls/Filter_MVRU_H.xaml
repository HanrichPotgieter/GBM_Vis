<UserControl x:Class="WPFBuhlerControls.Filter_MVRU_H"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="70">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Canvas HorizontalAlignment="Center" VerticalAlignment="Center" Name="canvasMain" Width="70" Height="40">

                <Rectangle Name="rectMain" Width="70" Height="40" Stroke="Black"/>
                <Rectangle Name="rectSmall" Width="30" Height="25" Stroke="Black" Margin="5,5" Canvas.Left="14" Canvas.Top="3" />

                <Polyline Stroke="Black" Points="60,0 60,40"/>
                
                <Polyline Name="polyMain" Points="17,10 10,10 10,17 11,17 10,17 10,25" StrokeThickness="1" Stroke="Black" Canvas.Left="14" Canvas.Top="3" />
                <Polyline Name="polySmall" Points="29,10 22,10 22,25 29,25" StrokeThickness="1" Stroke="Black" Canvas.Left="14" Canvas.Top="3" />

            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>
