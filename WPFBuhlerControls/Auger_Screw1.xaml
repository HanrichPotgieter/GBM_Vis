<UserControl x:Class="WPFBuhlerControls.Auger_Screw1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
            d:DesignHeight="30" d:DesignWidth="150">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Canvas HorizontalAlignment="Center" VerticalAlignment="Center" Name="canvasMain" Width="150" Height="30">

                <Rectangle Name="RectMain" Margin="0,5" Width="150" Height="20" StrokeThickness="1" Stroke="Black"/>

                <Polyline Stroke="Black" StrokeThickness="1" Points="5,20 15,10 25,20 35,10 45,20 55,10 65,20 75,10 85,20" />


            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>
