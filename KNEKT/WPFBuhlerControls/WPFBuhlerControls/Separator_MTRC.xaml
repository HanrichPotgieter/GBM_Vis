                <Polyline Stroke="Black" StrokeDashArray="4" Points="0,15 58,23"/>
                <Polyline Stroke="Black" StrokeDashArray="4" Points="0,18 57,26"/>
                <Polyline Stroke="Black" StrokeDashArray="4" Points="2,21 57,29"/>
                
                <Rectangle Name="RectMain" Height="8" Width="5" Stroke="Black" Margin="2.5,2.4"/>
                
                <Polyline Name="PolyFrame" Stroke="Black" Points="0,0 10,0 10,30 50,30 50,25 53,25 53,38 50,38 50,33 10,33 10,38 7,38 7,3 0,3 0,0" Fill="White"/>
                
                
                
            </Canvas>
