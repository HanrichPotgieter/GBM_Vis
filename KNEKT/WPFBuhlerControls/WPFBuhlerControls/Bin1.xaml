<UserControl x:Class="WPFBuhlerControls.Bin1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="30">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Canvas HorizontalAlignment="Center" VerticalAlignment="Center" Name="canvasMain" Width="30" Height="150">

                <Polyline Name="polybin" Stroke="Black" StrokeThickness="0.8" Points="0,0 0,140 8,150 22,150 30,140 30,0 0,0 0,140"/>

                <Rectangle Width="27.6" Height="7" Margin="1.4" Name="rectTop"/>
                
                <TextBlock Name="txtBin" Margin="0,55" Width="30" Height="50" FontSize="12" TextWrapping="Wrap" TextAlignment="Center" Canvas.Top="-6" />

            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>
