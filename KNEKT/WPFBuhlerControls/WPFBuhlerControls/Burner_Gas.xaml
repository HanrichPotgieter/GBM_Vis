<UserControl x:Class="WPFBuhlerControls.Burner_Gas"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
            mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="60">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Canvas HorizontalAlignment="Center" VerticalAlignment="Center" Name="canvasMid" Width="60" Height="60">
                <Ellipse Name="elipseMain" Width="51" Height="50" StrokeThickness="1.2" Stroke="Black" />
                <Ellipse Name="elipseInner" Width="20" Height="20" StrokeThickness="1.2" Stroke="Black" Margin="15,15" />
                <Polyline Name="polyMain" Stroke="Black" StrokeThickness="1" Points="25, 49.3 60,49.5 60, 33 48.74, 33" StrokeStartLineCap="Round" StrokeEndLineCap="Round"/>

            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>
