<UserControl x:Class="WPFBuhlerControls.Conveyor_Belt_S"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
              d:DesignHeight="10" d:DesignWidth="120">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Canvas HorizontalAlignment="Center" VerticalAlignment="Center" Name="canvasMain" Width="120" Height="10" >

                <Border Name="BordermainBelt" Width="120" Height="10" CornerRadius="6,6,6,6" BorderBrush="Black" BorderThickness="0.7" Margin="0,0"/>
                <Ellipse Name="ellipseLeft" Width="10" Height="10" Stroke="Black" StrokeThickness="0.7" Margin="0,0" Fill="White"/>
                <Ellipse Name="ellipseRight" Width="10" Height="10" Stroke="Black" StrokeThickness="0.7" Margin="110,0" Fill="White"/>

            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>
