                <Polyline Name="polyLeft" Points="9,33 9,8 " StrokeThickness="1" Stroke="Black"/>
                <Polyline Name="polyRight" Points="29,33 29,8 " StrokeThickness="1" Stroke="Black"/>
                <Polyline Name="polyLineBottom1" Points="4,22 27,35 " StrokeThickness="1" Stroke="Black"/>
                <Polyline Name="polyLineBottom2" Points="11,35 35,22 " StrokeThickness="1" Stroke="Black"/>
                
                <!--<Polyline Name="polySmall" Points="29,10 22,10 22,25 29,25" StrokeThickness="1" Stroke="Black"/>-->

            </Canvas>
        </Viewbox>
