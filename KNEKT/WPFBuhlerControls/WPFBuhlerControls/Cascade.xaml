                <Rectangle Name="RectTop" Width="20" Height="55" Margin="5,5"  StrokeThickness="0.7" Stroke="Black"/>
                
                <Polyline Name="polyLeft1" Points="5.5,5.5 15,15" StrokeThickness="0.7" Stroke="Black"/>
                <Polyline Name="polyRight1" Points="24.5,24.5 15,35" StrokeThickness="0.7" Stroke="Black"/>
                <Polyline Name="polyLeft2" Points="5.5,45.5 15,55" StrokeThickness="0.7" Stroke="Black"/>

            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>
