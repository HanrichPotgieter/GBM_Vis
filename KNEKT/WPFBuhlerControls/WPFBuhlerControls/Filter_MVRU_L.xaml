                <Polyline Name="polyMain" Points="17,20 10,20 10,27 11,27 10,27 10,35" StrokeThickness="1" Stroke="Black"/>
                <Polyline Name="polySmall" Points="29,20 22,20 22,35 29,35" StrokeThickness="1" Stroke="Black"/>

                <Rectangle Name="rectTop" Width="40" Height="11" Stroke="Black" Margin="0,0"/>
                <Rectangle Name="rectBot1" Width="40" Height="15" Stroke="Black" Margin="0,69"/>
                <Rectangle Name="rectBot2" Width="40" Height="15" Stroke="Black" Margin="0,83"/>
                
                <Polyline Name="PolyBot" Points="0.5,97.5 39.5,97.5 20,130 0.5,97.5 39.5,97.5" StrokeThickness="1" Stroke="Black"/>
            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>
