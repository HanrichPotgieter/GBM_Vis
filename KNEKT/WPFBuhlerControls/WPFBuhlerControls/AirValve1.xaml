<UserControl x:Class="WPFBuhlerControls.AirValve1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="20">
    <Grid >
        <Viewbox Stretch="Uniform">
            <Canvas HorizontalAlignment="Center" VerticalAlignment="Center" Name="canvasMain" Width="20" Height="20" >
                <Rectangle Stroke="Black" Width="20" Height="20" Name="rectMain"/>
                <Polyline Name="polyMain" Stroke="Black" StrokeThickness="0.7" Points="1,1 19,19"/>
                <Ellipse Name="elliseMain" Width="5" Height="5" Fill="Black" Margin="7.5,7.5"/>

            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>
