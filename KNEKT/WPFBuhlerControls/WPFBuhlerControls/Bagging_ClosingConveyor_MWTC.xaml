        <Viewbox Stretch="Uniform">
            <Canvas HorizontalAlignment="Center" VerticalAlignment="Center" Name="canvasMain" Width="100" Height="45" >

                <Rectangle Name="rectMain" Width="10" Height="8" Stroke="Black" StrokeThickness="0.7" Margin="74,8"/>
                <Rectangle Name="rectSmall" Width="5" Height="8" Stroke="Black" StrokeThickness="0.7" Margin="69.7,8"/>

                <Rectangle Name="rectPole" Width="2" Height="20" Stroke="Black" StrokeThickness="0.7" Margin="80,15.5"/>
                <Border Name="BordermainBelt" Width="90" Height="10" CornerRadius="6,6,6,6" BorderBrush="Black" BorderThickness="0.7" Margin="5,35"/>
                <Ellipse Name="ellipseLeft" Width="10" Height="10" Stroke="Black" StrokeThickness="0.7" Margin="5,35" Fill="White"/>
                <Ellipse Name="ellipseRight" Width="10" Height="10" Stroke="Black" StrokeThickness="0.7" Margin="85,35" Fill="White"/>                
                
            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>
