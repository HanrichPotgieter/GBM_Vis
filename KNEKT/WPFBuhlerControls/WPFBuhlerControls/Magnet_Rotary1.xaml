<UserControl x:Class="WPFBuhlerControls.Magnet_Rotary1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Canvas HorizontalAlignment="Center" VerticalAlignment="Center" Name="canvasMain" Width="50" Height="50">
                <Rectangle Name="RectMain" Width="50" Height="50" StrokeThickness="1" Stroke="Black"/>
                <Ellipse Stroke="Black" Width="40" Height="40" Margin="5" StrokeDashArray="8"/>
                <Polyline Stroke="Black" Points="15,17 15,23 35,23 35,17"/>
                <Polyline Stroke="Black" Points="15,33 15,27 35,27 35,33"/>
            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>