<UserControl x:Class="WPFBuhlerControls.ControlSieve_MKSA1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
           d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Canvas HorizontalAlignment="Center" VerticalAlignment="Center" Name="canvasMain" Width="100" Height="100">
                
                <Polyline Name="polyBin" Stroke="Black" Points="45,100 55,100 90,60 90,50 10,50 10,60 45,100 55,100"/>
                <Polyline Name="polyTopCone" Stroke="Black" Points="10,50 10,30 40,10 40,2 60,2 60,10 90,30 90,50 10,50 10,30"/>
                <Polyline Name="polyLeftFlap" Stroke="Black" Points="10,30 7,25 40,3 40,10 10,30"/>
                <Polyline Name="polyRightFlap" Stroke="Black" Points="90,30 93,25 60,3 60,10 90,30"/>
                <Polyline Stroke="Black" Points="10,30 90,30"/>

                <Polyline Stroke="Black" StrokeThickness="0.7" Points="10,33 90,33"/>
                <Polyline Stroke="Black" StrokeThickness="0.7" Points="10,36 90,36"/>
                <Polyline Stroke="Black" StrokeThickness="0.7" Points="10,42 90,42" StrokeDashArray="4"/>
            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>
