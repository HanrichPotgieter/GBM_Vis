<UserControl x:Class="WPFBuhlerControls.TankerLoader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="60">
    <Grid>
        <Viewbox Stretch="Uniform">
            <Canvas HorizontalAlignment="Center" VerticalAlignment="Center" Name="canvasMain" Width="60" Height="90">

                <Polyline Name="polyTop" Points="0,10 0,0 60,0 60,10" StrokeThickness="1.5" Stroke="Black"/>
                
                <Polyline Name="polyMain" Points="10,0 8,8 12,18 8,28 12,38 8,48 10,55    50,55 52,48 48,38 52,28 48,18 52,8 50,0    10,0" StrokeThickness="1" Stroke="Black"/>

                <Polyline Name="polyBot" Points="5,55 20,90 40,90 55,55 5,55 20,90" StrokeThickness="1" Stroke="Black"/>

            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>

