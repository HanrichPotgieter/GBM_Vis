<UserControl x:Class="KNEKT.Controls.StoppingTimer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="78" MinWidth="78" MinHeight="40" Loaded="UserControl_Loaded">
    <Grid Height="40" Width="78">
        <Border Background="Black" CornerRadius="0,10,0,0" Margin="2,2,2,0" BorderBrush="Black" Height="16" VerticalAlignment="Top">
            <Label Content="Stopping Time" Height="15" HorizontalContentAlignment="Left" Name="lblStopping" Width="69" Foreground="White" FontSize="10" Padding="2,0,0,0"/>
        </Border>
        <Rectangle Margin="2,18,2,2" Name="rectangle1" Stroke="Black" Fill="LightGray" />
        <ProgressBar Background="White" BorderThickness="1" Foreground="Aqua" Margin="4,21,5,4" Name="progressBarStopping" ValueChanged="progressBarStopping_ValueChanged" />
        <Label Content="0" Margin="35,20,35,6" Name="lblProgress" HorizontalContentAlignment="Center"  VerticalContentAlignment="Center" Padding="0,0,0,0" />

    </Grid>

</UserControl>