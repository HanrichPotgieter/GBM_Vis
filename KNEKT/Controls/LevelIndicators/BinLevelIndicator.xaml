<UserControl x:Class="KNEKT.Controls.LevelIndicators.BinLevelIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="50"
             Name="UserControl" >
    <Grid x:Name="Grid1" >


        <Border CornerRadius="0,0,5,5" Margin="1,1,1,1" Height="98"  VerticalAlignment="Bottom" Name="recProgress" Background="Orange" />
        <Border  Margin="1,1,1,1" Background="Transparent" 
         BorderThickness="1" Opacity="1.0" CornerRadius="5,5,5,5" >
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0"
                          Color="Black"
                          Opacity="1"
                          BlurRadius="6"/>
            </Border.Effect>
        </Border>

        <Border Name="rectGradient" Margin="2,2" Opacity="0.5" CornerRadius="0,0,5,5">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="Transparent" Offset="0.5"/>
                </LinearGradientBrush>
            </Border.Background>
        </Border>

    </Grid>
</UserControl>
