        <Label Content="t/h" FontSize="9" Height="17" HorizontalAlignment="Left" HorizontalContentAlignment="Left" Margin="119,28,0,0" Name="label1" Padding="0,0,0,0" VerticalAlignment="Top" Width="21" />
        <Label Content="t/h" FontSize="9" Height="17" HorizontalAlignment="Left" HorizontalContentAlignment="Left" Margin="119,54,0,0" Name="label4" Padding="0,0,0,0" VerticalAlignment="Top" Width="21" />
